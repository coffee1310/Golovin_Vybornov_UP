<Window x:Class="PropertyManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropertyManagement"
        mc:Ignorable="d"
       Title="Управляющая компания" 
        WindowStartupLocation="CenterScreen"
        Width="1200" Height="700"
        MinWidth="1000" MinHeight="600">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Заголовок -->
        <Border DockPanel.Dock="Top" Background="#2196F3" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🏢" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="Управляющая компания" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Навигационная панель -->
        <Border DockPanel.Dock="Left" Background="#F5F5F5" Width="220">
            <StackPanel Margin="10">
                <TextBlock Text="Меню" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="5,10,5,20"
                           Foreground="#666"/>

                <Button Content="🏠 Главная" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="MainPage_Click"/>

                <Button Content="📊 Отчеты"
                    Style="{StaticResource NavButtonStyle}"
                    Click="ReportsPage_Click"/>

                <TextBlock Text="Данные" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="5,20,5,10"
                           Foreground="#666"/>

                <Button Content="🏢 Здания" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="BuildingsPage_Click"/>
                <Button Content="🏠 Квартиры" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="ApartmentsPage_Click"/>
                <Button Content="👥 Собственники" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="OwnersPage_Click"/>
                <Button Content="👨‍🔧 Сотрудники" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="EmployeesPage_Click"/>
                <Button Content="💰 Расходы"
                    Style="{StaticResource NavButtonStyle}"
                    Click="RequestExpensesPage_Click"/>

                <TextBlock Text="Заявки" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Margin="5,20,5,10"
                           Foreground="#666"/>

                <Button Content="🔧 Заявки" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="ServiceRequestsPage_Click"/>
                <Button Content="➕ Новая заявка" 
                        Style="{StaticResource NavButtonStyle}"
                        Background="#4CAF50"
                        Click="NewRequestPage_Click"/>

                <Separator Margin="0,20,0,10"/>

                <Button Content="⚙️ Настройки" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="SettingsPage_Click"/>
                <Button Content="❓ Справка" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="HelpPage_Click"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden"
               Background="White"/>
    </DockPanel>
</Window>