<Page x:Class="PropertyManagement.Pages.ApartmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Квартиры">

    <DockPanel>
        <!-- Заголовок -->
        <Border DockPanel.Dock="Top" Background="#2196F3" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🏠" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Квартиры" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock x:Name="ApartmentsCountText" 
                           Text=" (0)"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Панель управления -->
        <Border DockPanel.Dock="Top" Background="#F5F5F5" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="➕ Добавить" 
                        Click="AddApartment_Click"
                        Padding="10,5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="✏️ Редактировать" 
                        Click="EditApartment_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="🗑️ Удалить" 
                        Click="DeleteApartment_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="🔄 Обновить" 
                        Click="Refresh_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <!-- Фильтр по зданию -->
                <TextBlock Text="Здание:" 
                           VerticalAlignment="Center" 
                           Margin="30,0,10,0"/>
                <ComboBox x:Name="BuildingFilterComboBox" 
                          Width="250" 
                          DisplayMemberPath="Text"
                          SelectionChanged="BuildingFilterComboBox_SelectionChanged"/>

                <!-- Поиск -->
                <TextBlock Text="Поиск:" 
                           VerticalAlignment="Center" 
                           Margin="20,0,10,0"/>
                <TextBox x:Name="SearchTextBox" 
                         Width="200" 
                         Padding="5"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>
        </Border>

        <!-- Таблица квартир -->
        <DataGrid x:Name="ApartmentsGrid" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  SelectionChanged="ApartmentsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding apartment_id}" Width="50"/>
                <DataGridTextColumn Header="Номер" Binding="{Binding apartment_number}" Width="80"/>
                <DataGridTextColumn Header="Адрес здания" Binding="{Binding building_address}" Width="*"/>
                <DataGridTextColumn Header="Город" Binding="{Binding city}" Width="120"/>
                <DataGridTextColumn Header="Площадь (м²)" Binding="{Binding area}" Width="100"/>
                <DataGridTextColumn Header="Собственник" Binding="{Binding owner_name}" Width="200"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding owner_phone}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>