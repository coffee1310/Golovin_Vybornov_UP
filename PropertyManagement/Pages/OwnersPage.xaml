<Page x:Class="PropertyManagement.Pages.OwnersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Собственники">

    <DockPanel>
        <!-- Заголовок -->
        <Border DockPanel.Dock="Top" Background="#2196F3" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="👤" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Собственники"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock x:Name="OwnersCountText"
                           Text=" (0)"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Панель управления -->
        <Border DockPanel.Dock="Top" 
                Background="#F5F5F5" 
                Padding="10"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="➕ Добавить"
                        Click="AddOwner_Click"
                        Padding="10,5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="✏️ Редактировать"
                        Click="EditOwner_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="🗑️ Удалить"
                        Click="DeleteOwner_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="🔄 Обновить"
                        Click="Refresh_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <!-- Поиск -->
                <TextBlock Text="Поиск:"
                           VerticalAlignment="Center"
                           Margin="30,0,10,0"/>

                <TextBox x:Name="SearchTextBox"
                         Width="200"
                         Padding="5"
                         TextChanged="SearchTextBox_TextChanged">
                    <TextBox.ToolTip>
                        <ToolTip>
                            Поиск по ФИО, телефону или паспорту
                        </ToolTip>
                    </TextBox.ToolTip>
                </TextBox>

                <!-- Фильтр по наличию квартир -->
                <TextBlock Text="Квартиры:"
                           VerticalAlignment="Center"
                           Margin="20,0,10,0"/>

                <ComboBox x:Name="ApartmentFilterComboBox"
                          Width="150"
                          SelectionChanged="ApartmentFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="Все"/>
                    <ComboBoxItem Content="С квартирами"/>
                    <ComboBoxItem Content="Без квартир"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Таблица собственников -->
        <DataGrid x:Name="OwnersGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  SelectionChanged="OwnersGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding owner_id}" 
                                    Width="50"/>

                <DataGridTextColumn Header="ФИО*" 
                                    Binding="{Binding full_name}" 
                                    Width="*"/>

                <DataGridTextColumn Header="Паспорт" 
                                    Binding="{Binding passport_data}" 
                                    Width="150"/>

                <DataGridTextColumn Header="Телефон" 
                                    Binding="{Binding phone_number}" 
                                    Width="120"/>

                <DataGridTextColumn Header="Email" 
                                    Binding="{Binding email}" 
                                    Width="200"/>

                <DataGridTextColumn Header="Квартиры" 
                                    Binding="{Binding apartments_count}" 
                                    Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#2196F3"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Дата регистрации" 
                                    Binding="{Binding registration_date, StringFormat='dd.MM.yyyy'}" 
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>