<Page x:Class="PropertyManagement.Pages.OwnerEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Собственник">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок с кнопкой Назад -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="⬅ Назад" 
                        Click="BackButton_Click"
                        Padding="10,5"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,15,0"/>

                <TextBlock x:Name="PageTitle" 
                           Text="Новый собственник"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Форма -->
            <Border Background="White" 
                    Padding="20"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ФИО -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="ФИО*:" 
                               Margin="0,0,10,10"/>

                    <TextBox Grid.Row="0" Grid.Column="1" 
                             x:Name="FullNameTextBox"
                             Margin="0,0,0,10">
                        <TextBox.ToolTip>
                            <ToolTip>
                                Полное имя собственника (например: Иванов Иван Иванович)
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>

                    <!-- Паспортные данные -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Паспорт:" 
                               Margin="0,0,10,10"/>

                    <TextBox Grid.Row="1" Grid.Column="1" 
                             x:Name="PassportTextBox"
                             Margin="0,0,0,10">
                        <TextBox.ToolTip>
                            <ToolTip>
                                Серия и номер паспорта (например: 1234 567890)
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>

                    <!-- Контактный телефон -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Телефон:" 
                               Margin="0,0,10,10"/>

                    <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="PhoneTextBox"
                             Margin="0,0,0,10">
                        <TextBox.ToolTip>
                            <ToolTip>
                                Контактный телефон (например: 89181234567)
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>

                    <!-- Email -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Email:" 
                               Margin="0,0,10,10"/>

                    <TextBox Grid.Row="3" Grid.Column="1" 
                             x:Name="EmailTextBox"
                             Margin="0,0,0,10">
                        <TextBox.ToolTip>
                            <ToolTip>
                                Адрес электронной почты (например: ivanov@mail.ru)
                            </ToolTip>
                            </ToolTip>
                    </TextBox>

                    <!-- Дата регистрации -->
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Дата регистрации:" 
                               Margin="0,0,10,10"/>

                    <DatePicker Grid.Row="4" Grid.Column="1" 
                                x:Name="RegistrationDatePicker"
                                Margin="0,0,0,10">
                        <DatePicker.ToolTip>
                            <ToolTip>
                                Дата регистрации собственника в системе
                            </ToolTip>
                        </DatePicker.ToolTip>
                    </DatePicker>

                    <!-- Квартиры собственника (только просмотр в режиме редактирования) -->
                    <TextBlock x:Name="ApartmentsLabel"
                               Grid.Row="5" Grid.Column="0" 
                               Text="Квартиры:" 
                               Margin="0,0,10,10"
                               Visibility="Collapsed"/>

                    <StackPanel x:Name="ApartmentsPanel"
                                Grid.Row="5" Grid.Column="1" 
                                Margin="0,0,0,10"
                                Visibility="Collapsed">
                        <ItemsControl x:Name="ApartmentsListBox"
                                      BorderThickness="0"/>
                        <TextBlock x:Name="NoApartmentsText"
                                   Text="У собственника нет квартир"
                                   FontStyle="Italic"
                                   Foreground="#666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Сообщения об ошибках -->
                    <TextBlock x:Name="ErrorText" 
                               Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               Visibility="Collapsed"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="7" Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Сохранить" 
                                Click="SaveButton_Click"
                                Padding="15,8"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        <Button Content="Отмена" 
                                Click="CancelButton_Click"
                                Padding="15,8"
                                Margin="10,0,0,0"
                                Background="#9E9E9E"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>