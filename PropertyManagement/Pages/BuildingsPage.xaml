<Page x:Class="PropertyManagement.Pages.BuildingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Здания">

    <DockPanel>
        <!-- Заголовок -->
        <Border DockPanel.Dock="Top" Background="#2196F3" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🏢" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Здания" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock x:Name="BuildingsCountText" 
                           Text=" (0)"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Панель управления -->
        <Border DockPanel.Dock="Top" Background="#F5F5F5" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="➕ Добавить" 
                        Click="AddBuilding_Click"
                        Padding="10,5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="✏️ Редактировать" 
                        Click="EditBuilding_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="🗑️ Удалить" 
                        Click="DeleteBuilding_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="🔄 Обновить" 
                        Click="Refresh_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <!-- Поиск -->
                <TextBlock Text="Поиск:" 
                           VerticalAlignment="Center" 
                           Margin="30,0,10,0"/>
                <TextBox x:Name="SearchTextBox" 
                         Width="200" 
                         Padding="5"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>
        </Border>

        <!-- Таблица зданий -->
        <DataGrid x:Name="BuildingsGrid" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  SelectionChanged="BuildingsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding building_id}" Width="60"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding address}" Width="*"/>
                <DataGridTextColumn Header="Город" Binding="{Binding city}" Width="120"/>
                <DataGridTextColumn Header="Этажи" Binding="{Binding floors}" Width="70"/>
                <DataGridTextColumn Header="Квартиры" Binding="{Binding apartments_count}" Width="80"/>
                <DataGridTextColumn Header="Год постройки" Binding="{Binding construction_year}" Width="100"/>
                <DataGridTextColumn Header="Площадь (м²)" Binding="{Binding total_area}" Width="100"/>
                <DataGridTextColumn Header="Начало управления" 
                                    Binding="{Binding management_start_date, StringFormat='dd.MM.yyyy'}" 
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>