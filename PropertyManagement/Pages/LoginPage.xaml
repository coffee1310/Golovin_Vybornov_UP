<Page x:Class="PropertyManagement.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PropertyManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      Background="#F4E8D3">

    <Grid>
        <Border Background="White" 
                CornerRadius="10" 
                Width="350"
                Height="380"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="30">
            <StackPanel VerticalAlignment="Center">
                <!-- Логотип -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Ellipse Width="60" Height="60" 
                             Stroke="#67BA80" 
                             StrokeThickness="2">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F4E8D3" Offset="0"/>
                                <GradientStop Color="#E8DCC7" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="🏢" 
                               FontSize="24"
                               HorizontalAlignment="Center"
                               Margin="0,-44,0,0"/>
                </StackPanel>

                <!-- Заголовок -->
                <TextBlock Text="Вход в систему" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Поля ввода -->
                <TextBlock Text="Логин" 
                           FontSize="12" 
                           Foreground="#666666"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtLogin" 
                         BorderBrush="#D4C8B3"
                         BorderThickness="1"
                         Padding="8"
                         FontFamily="Segoe UI"
                         FontSize="14"
                         Height="36"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Пароль" 
                           FontSize="12" 
                           Foreground="#666666"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                             BorderBrush="#D4C8B3"
                             BorderThickness="1"
                             Padding="8"
                             FontFamily="Segoe UI"
                             FontSize="14"
                             Height="36"
                             Margin="0,0,0,20"/>

                <!-- Кнопка входа -->
                <Button x:Name="btnLogin" 
                        Content="Войти"
                        Background="#67BA80"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,8"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Height="40"
                        Cursor="Hand"
                        Click="BtnLogin_Click"/>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="txtError" 
                           Text=""
                           Foreground="Red"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>