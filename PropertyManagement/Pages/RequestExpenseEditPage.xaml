<Page x:Class="PropertyManagement.Pages.RequestExpenseEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Расход на заявку">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок с кнопкой Назад -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="⬅ Назад" 
                        Click="BackButton_Click"
                        Padding="10,5"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,15,0"/>

                <TextBlock x:Name="PageTitle" 
                           Text="Новый расход"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Форма -->
            <Border Background="White" 
                    Padding="20"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заявка -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Заявка*:" 
                               Margin="0,0,10,10"/>

                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              x:Name="RequestComboBox"
                              DisplayMemberPath="DisplayText"
                              Margin="0,0,0,10"/>

                    <!-- Тип расхода -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Тип расхода*:" 
                               Margin="0,0,10,10"/>

                    <ComboBox Grid.Row="1" Grid.Column="1" 
                              x:Name="TypeComboBox"
                              Margin="0,0,0,10">
                        <ComboBoxItem Content="Материалы"/>
                        <ComboBoxItem Content="Работа"/>
                        <ComboBoxItem Content="Транспорт"/>
                        <ComboBoxItem Content="Оборудование"/>
                        <ComboBoxItem Content="Услуги"/>
                        <ComboBoxItem Content="Прочее"/>
                    </ComboBox>

                    <!-- Сумма -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Сумма*:" 
                               Margin="0,0,10,10"/>

                    <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="AmountTextBox"
                             Margin="0,0,0,10"
                             ToolTip="Сумма расхода в рублях (например: 1500.00)"/>

                    <!-- Описание -->
                    <TextBlock Grid.Row="3" Grid.Column="0" 
                               Text="Описание:" 
                               Margin="0,0,10,10"/>

                    <TextBox Grid.Row="3" Grid.Column="1" 
                             x:Name="DescriptionTextBox"
                             Height="60"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"/>

                    <!-- Дата расхода -->
                    <TextBlock Grid.Row="4" Grid.Column="0" 
                               Text="Дата расхода:" 
                               Margin="0,0,10,10"/>

                    <DatePicker Grid.Row="4" Grid.Column="1" 
                                x:Name="ExpenseDatePicker"
                                Margin="0,0,0,10"/>

                    <!-- Кто добавил -->
                    <TextBlock Grid.Row="5" Grid.Column="0" 
                               Text="Кто добавил:" 
                               Margin="0,0,10,10"/>

                    <TextBox Grid.Row="5" Grid.Column="1" 
                             x:Name="CreatedByTextBox"
                             Margin="0,0,0,20"
                             ToolTip="ФИО сотрудника, добавившего расход"/>

                    <!-- Сообщения об ошибках -->
                    <TextBlock x:Name="ErrorText" 
                               Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               Visibility="Collapsed"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="7" Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Сохранить" 
                                Click="SaveButton_Click"
                                Padding="15,8"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        <Button Content="Отмена" 
                                Click="CancelButton_Click"
                                Padding="15,8"
                                Margin="10,0,0,0"
                                Background="#9E9E9E"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>