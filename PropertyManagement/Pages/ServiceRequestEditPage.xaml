<Page x:Class="PropertyManagement.Pages.ServiceRequestEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заявка">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock x:Name="PageTitle" 
                       Text="Новая заявка"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Форма -->
            <Border Background="White" 
                    Padding="20"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Квартира -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Квартира*:" Margin="0,0,10,10"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                          x:Name="ApartmentComboBox"
                          DisplayMemberPath="FullAddress"
                          Margin="0,0,0,10"/>

                    <!-- Тип заявки -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Тип*:" Margin="0,0,10,10"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" 
                      x:Name="TypeComboBox"
                      Margin="0,0,0,10">
                    </ComboBox>

                    <!-- Описание -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание*:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="DescriptionTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="80"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"/>

                    <!-- Статус -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Статус*:" Margin="0,0,10,10"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" 
                            x:Name="StatusComboBox"
                            Margin="0,0,0,10">
                    </ComboBox>

                    <!-- Исполнитель -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Исполнитель:" Margin="0,0,10,10"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" 
                          x:Name="EmployeeComboBox"
                          DisplayMemberPath="full_name"
                          Margin="0,0,0,10"/>

                    <!-- Приоритет -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Приоритет:" Margin="0,0,10,10"/>
                    <ComboBox Grid.Row="5" Grid.Column="1" 
                      x:Name="PriorityComboBox"
                      Margin="0,0,0,20">
                    </ComboBox>

                    <!-- Сообщения об ошибках -->
                    <TextBlock x:Name="ErrorText" 
                               Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               Visibility="Collapsed"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="7" Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Сохранить" 
                                Click="SaveButton_Click"
                                Padding="15,8"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        <Button Content="Отмена" 
                                Click="CancelButton_Click"
                                Padding="15,8"
                                Margin="10,0,0,0"
                                Background="#9E9E9E"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>