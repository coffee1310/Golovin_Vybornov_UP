<Page x:Class="PropertyManagement.Pages.BuildingEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Здание">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock x:Name="PageTitle" 
                       Text="Новое здание"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Форма -->
            <Border Background="White" 
                    Padding="20"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Адрес -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Адрес:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             x:Name="AddressTextBox"
                             Margin="0,0,0,10"/>

                    <!-- Город -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Город:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             x:Name="CityTextBox"
                             Margin="0,0,0,10"/>

                    <!-- Дата начала управления -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Начало управления:" Margin="0,0,10,10"/>
                    <DatePicker Grid.Row="2" Grid.Column="1" 
                                x:Name="StartDatePicker"
                                Margin="0,0,0,10"/>

                    <!-- Этажи -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Этажи:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             x:Name="FloorsTextBox"
                             Margin="0,0,0,10"/>

                    <!-- Количество квартир -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Квартиры:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="4" Grid.Column="1" 
                             x:Name="ApartmentsTextBox"
                             Margin="0,0,0,10"/>

                    <!-- Год постройки -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Год постройки:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="5" Grid.Column="1" 
                             x:Name="YearTextBox"
                             Margin="0,0,0,10"/>

                    <!-- Общая площадь -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Площадь (м²):" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="6" Grid.Column="1" 
                             x:Name="AreaTextBox"
                             Margin="0,0,0,20"/>

                    <!-- Сообщения об ошибках -->
                    <TextBlock x:Name="ErrorText" 
                               Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               Visibility="Collapsed"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="8" Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Сохранить" 
                                Click="SaveButton_Click"
                                Padding="15,8"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        <Button Content="Отмена" 
                                Click="CancelButton_Click"
                                Padding="15,8"
                                Margin="10,0,0,0"
                                Background="#9E9E9E"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>