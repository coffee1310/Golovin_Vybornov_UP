<Page x:Class="PropertyManagement.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PropertyManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
       Title="Главная">

    <Page.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Добро пожаловать в систему управления заявками"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Здесь вы можете управлять зданиями, квартирами, собственниками и заявками на ремонт"
                       FontSize="14"
                       Foreground="#666"
                       Margin="0,0,0,30"/>

            <!-- Статистика -->
            <TextBlock Text="📊 Статистика" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,0,0,15"/>

            <WrapPanel>
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🏢" FontSize="28" HorizontalAlignment="Center"/>
                        <TextBlock Text="Здания" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock x:Name="BuildingsCount" Text="Загрузка..." 
                                   FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🏠" FontSize="28" HorizontalAlignment="Center"/>
                        <TextBlock Text="Квартиры" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock x:Name="ApartmentsCount" Text="Загрузка..." 
                                   FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="👥" FontSize="28" HorizontalAlignment="Center"/>
                        <TextBlock Text="Сотрудники" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock x:Name="EmployeesCount" Text="Загрузка..." 
                                   FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔧" FontSize="28" HorizontalAlignment="Center"/>
                        <TextBlock Text="Заявки" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock x:Name="RequestsCount" Text="Загрузка..." 
                                   FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Быстрые действия -->
            <TextBlock Text="⚡ Быстрые действия" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,30,0,15"/>

            <WrapPanel Margin="0,0,0,30">
                <Button Content="➕ Добавить здание" 
                        Width="180" Height="100"
                        Margin="10"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="AddBuilding_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    Padding="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="👥 Добавить сотрудника" 
                        Width="180" Height="100"
                        Margin="10"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="AddEmployee_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    Padding="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="🔧 Создать заявку" 
                        Width="180" Height="100"
                        Margin="10"
                        Background="#FF9800"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CreateRequest_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    Padding="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="📊 Просмотреть отчеты" 
                        Width="180" Height="100"
                        Margin="10"
                        Background="#9C27B0"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ViewReports_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    Padding="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </WrapPanel>

            <!-- Последние заявки -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="📝 Последние заявки" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

                    <DataGrid x:Name="RecentRequestsGrid" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="120"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Desc}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding State}" Width="100"/>
                            <!-- Дата убрана, так как поле CreatedDate может отсутствовать -->
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Content="Показать все заявки" 
                Margin="0,15,0,0"
                HorizontalAlignment="Right"
                Padding="10,5"
                Background="#2196F3"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Click="ViewAllRequests_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>