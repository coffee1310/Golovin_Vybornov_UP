<Page x:Class="PropertyManagement.Pages.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сотрудник"
      FontFamily="Segoe UI">

    <Page.Resources>
        <!-- Стили -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#67BA80"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5AA670"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4D945D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F4E8D3"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D4C8B3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8DCC7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D4C8B3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#D4C8B3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#D4C8B3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

    </Page.Resources>

    <Grid Background="#F4E8D3">
        <ScrollViewer>
            <StackPanel Margin="20">
                <!-- Заголовок с кнопкой Назад -->
                <Border Background="White" 
                        Padding="20"
                        BorderBrush="#D4C8B3" 
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Кнопка Назад -->
                        <Button Grid.Column="0"
                                Content="← Назад" 
                                Click="BackButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,20,0"/>

                        <!-- Заголовок страницы -->
                        <TextBlock Grid.Column="1" 
                                   x:Name="PageTitle" 
                                   Text="Новый сотрудник"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Foreground="#333333"/>
                    </Grid>
                </Border>

                <!-- Форма редактирования -->
                <Border Background="White" 
                        Padding="20"
                        BorderBrush="#D4C8B3" 
                        BorderThickness="1"
                        CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Информация о форме -->
                        <Border Grid.Row="0"
                                Background="#F4E8D3"
                                Padding="15"
                                CornerRadius="6"
                                Margin="0,0,0,20">
                            <TextBlock Text="✏️ Заполните информацию о сотруднике"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333333"/>
                        </Border>

                        <!-- Поля формы -->
                        <Grid Grid.Row="1" Margin="0,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ФИО -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="ФИО*:" 
                                       Margin="0,0,15,15"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     x:Name="FullNameTextBox"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15"
                                     ToolTip="Полное имя сотрудника (например: Иванов Иван Иванович)"/>

                            <!-- Должность -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Должность*:" 
                                       Margin="0,0,15,15"
                                       VerticalAlignment="Center"/>

                            <ComboBox Grid.Row="1" Grid.Column="1" 
                                     x:Name="PositionComboBox"
                                     Style="{StaticResource ComboBoxStyle}"
                                     Margin="0,0,0,15"
                                     ToolTip="Выберите должность сотрудника">
                                <ComboBoxItem Content="Администратор"/>
                                <ComboBoxItem Content="Менеджер"/>
                                <ComboBoxItem Content="Техник"/>
                                <ComboBoxItem Content="Электрик"/>
                                <ComboBoxItem Content="Сантехник"/>
                                <ComboBoxItem Content="Уборщик"/>
                                <ComboBoxItem Content="Охранник"/>
                            </ComboBox>

                            <!-- Телефон -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Телефон*:" 
                                       Margin="0,0,15,15"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     x:Name="PhoneTextBox"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15"
                                     ToolTip="Формат: +7(XXX)XXX-XX-XX или 8XXXXXXXXXX"/>

                            <!-- Логин -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Логин*:" 
                                       Margin="0,0,15,15"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Row="3" Grid.Column="1" 
                                     x:Name="LoginTextBox"
                                     Style="{StaticResource TextBoxStyle}"
                                     Margin="0,0,0,15"
                                     ToolTip="Логин для входа в систему (только латинские буквы, цифры и _)"/>

                            <!-- Пароль -->
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="Пароль*:" 
                                       Margin="0,0,15,15"
                                       VerticalAlignment="Center"/>

                            <PasswordBox Grid.Row="4" Grid.Column="1" 
                                     x:Name="PasswordBox"
                                     Style="{StaticResource PasswordBoxStyle}"
                                     Margin="0,0,0,15"
                                     ToolTip="Пароль для входа в систему (минимум 6 символов)"/>

                            <!-- Подтверждение пароля -->
                            <TextBlock Grid.Row="5" Grid.Column="0" 
                                       Text="Подтверждение пароля*:" 
                                       Margin="0,0,15,0"
                                       VerticalAlignment="Center"/>

                            <PasswordBox Grid.Row="5" Grid.Column="1" 
                                     x:Name="ConfirmPasswordBox"
                                     Style="{StaticResource PasswordBoxStyle}"
                                     ToolTip="Повторите пароль для подтверждения"/>
                        </Grid>

                        <!-- Примечание -->
                        <Border Grid.Row="2"
                                Background="#F9F9F9"
                                BorderBrush="#D4C8B3"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15"
                                Margin="0,0,0,20">
                            <TextBlock Text="Примечание: При редактировании сотрудника пароль заполнять не обязательно. 
                                            Оставьте поля пустыми, если не хотите менять пароль."
                                       Foreground="#666666"
                                       TextWrapping="Wrap"
                                       FontSize="13"/>
                        </Border>

                        <!-- Кнопки -->
                        <StackPanel Grid.Row="3" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button Content="💾 Сохранить" 
                                    Click="SaveButton_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"/>

                            <Button Content="✖ Отмена" 
                                    Click="CancelButton_Click"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>