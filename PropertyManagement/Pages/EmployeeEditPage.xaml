<Page x:Class="PropertyManagement.Pages.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сотрудник">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock x:Name="PageTitle" 
                       Text="Новый сотрудник"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Форма -->
            <Border Background="White" 
                    Padding="20"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ФИО -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ФИО*:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             x:Name="FullNameTextBox"
                             Margin="0,0,0,10"/>

                    <!-- Должность -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Должность:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             x:Name="PositionTextBox"
                             Margin="0,0,0,10">
                        <TextBox.ToolTip>
                            <ToolTip>
                                Например: Сантехник, Электрик, Уборщик
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>

                    <!-- Телефон -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Телефон:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="PhoneTextBox"
                             Margin="0,0,0,10">
                        <TextBox.ToolTip>
                            <ToolTip>
                                Формат: 89181234567
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>

                    <!-- Email -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" Margin="0,0,10,10"/>
                    <TextBox Grid.Row="3" Grid.Column="1" 
                             x:Name="EmailTextBox"
                             Margin="0,0,0,20">
                        <TextBox.ToolTip>
                            <ToolTip>
                                Например: ivanov@company.ru
                            </ToolTip>
                        </TextBox.ToolTip>
                    </TextBox>

                    <!-- Сообщения об ошибках -->
                    <TextBlock x:Name="ErrorText" 
                               Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                               Foreground="Red"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               Visibility="Collapsed"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="5" Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Сохранить" 
                                Click="SaveButton_Click"
                                Padding="15,8"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        <Button Content="Отмена" 
                                Click="CancelButton_Click"
                                Padding="15,8"
                                Margin="10,0,0,0"
                                Background="#9E9E9E"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>