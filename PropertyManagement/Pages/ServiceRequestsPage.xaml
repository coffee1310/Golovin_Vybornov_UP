<Page x:Class="PropertyManagement.Pages.ServiceRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заявки">

    <DockPanel>
        <!-- Заголовок -->
        <Border DockPanel.Dock="Top" Background="#2196F3" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔧" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Заявки на обслуживание" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock x:Name="RequestsCountText" 
                           Text=" (0)"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Панель управления -->
        <Border DockPanel.Dock="Top" Background="#F5F5F5" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="➕ Новая заявка" 
                        Click="AddRequest_Click"
                        Padding="10,5"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="✏️ Редактировать" 
                        Click="EditRequest_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="🗑️ Удалить" 
                        Click="DeleteRequest_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="🔄 Обновить" 
                        Click="Refresh_Click"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <!-- Фильтр по статусу -->
                <TextBlock Text="Статус:" 
                           VerticalAlignment="Center" 
                           Margin="30,0,10,0"/>
                <ComboBox x:Name="StatusFilterComboBox" 
                          Width="150" 
                          SelectionChanged="StatusFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="Все"/>
                    <ComboBoxItem Content="Открыта"/>
                    <ComboBoxItem Content="В работе"/>
                    <ComboBoxItem Content="Закрыта"/>
                </ComboBox>

                <!-- Поиск -->
                <TextBlock Text="Поиск:" 
                           VerticalAlignment="Center" 
                           Margin="20,0,10,0"/>
                <TextBox x:Name="SearchTextBox" 
                         Width="200" 
                         Padding="5"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>
        </Border>

        <!-- Таблица заявок -->
        <DataGrid x:Name="RequestsGrid" 
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single"
          SelectionUnit="FullRow"
          SelectionChanged="RequestsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding request_id}" Width="50"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding request_type}" Width="120"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding description}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding status}" Width="100"/>
                <DataGridTextColumn Header="Дата" 
                            Binding="{Binding created_date, StringFormat='dd.MM.yyyy'}" 
                            Width="100"/>
                <DataGridTextColumn Header="Квартира" 
                            Binding="{Binding apartment_number}" 
                            Width="80"/>
                <DataGridTextColumn Header="Адрес" 
                            Binding="{Binding building_address}" 
                            Width="200"/>
                <DataGridTextColumn Header="Исполнитель" 
                            Binding="{Binding employee_name}" 
                            Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>