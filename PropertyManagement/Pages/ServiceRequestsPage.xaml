<Page x:Class="PropertyManagement.Pages.ServiceRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Заявки"
      FontFamily="Segoe UI">

    <Page.Resources>
        <!-- Стили -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#67BA80"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5AA670"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4D945D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F4E8D3"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D4C8B3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8DCC7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D4C8B3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#D4C8B3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D4C8B3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- Стиль для статусов -->
        <Style x:Key="StatusOpenStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="StatusInProgressStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF9800"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="StatusCompletedStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="StatusClosedStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#795548"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="StatusCancelledStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F44336"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F4E8D3">
        <ScrollViewer>
            <StackPanel Margin="20">
                <!-- Заголовок страницы -->
                <Border Background="White" 
                        Padding="20"
                        BorderBrush="#D4C8B3" 
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <!-- Логотип заявок -->
                        <TextBlock Text="🔧" 
                                   FontSize="28" 
                                   Margin="0,0,12,0"/>
                        <TextBlock Text="Заявки на обслуживание"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="RequestsCountText"
                                   Text=" (0)"
                                   FontSize="16"
                                   Foreground="#67BA80"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Панель управления -->
                <Border Background="White" 
                        Padding="20"
                        BorderBrush="#D4C8B3" 
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Кнопки действий -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="➕ Новая заявка"
                                    Click="AddRequest_Click"
                                    Style="{StaticResource PrimaryButtonStyle}"/>

                            <Button Content="✏️ Редактировать"
                                    Click="EditRequest_Click"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="10,0,0,0"/>

                            <Button Content="🗑️ Удалить"
                                    Click="DeleteRequest_Click"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="10,0,0,0"/>

                            <Button Content="🔄 Обновить"
                                    Click="Refresh_Click"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Фильтры и поиск -->
                        <Border Background="#F4E8D3" 
                                Padding="15"
                                CornerRadius="6"
                                Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="🔍 Поиск и фильтрация"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,10"
                                           Foreground="#333333"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Поиск -->
                                    <TextBlock Grid.Column="0" 
                                               Text="Поиск:"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>

                                    <TextBox Grid.Column="1" 
                                             x:Name="SearchTextBox"
                                             Style="{StaticResource TextBoxStyle}"
                                             TextChanged="SearchTextBox_TextChanged"
                                             ToolTip="Поиск по типу, описанию, адресу или исполнителю"/>

                                    <!-- Фильтр по статусу -->
                                    <TextBlock Grid.Column="2" 
                                               Text="Статус:"
                                               VerticalAlignment="Center"
                                               Margin="20,0,10,0"/>

                                    <ComboBox Grid.Column="3" 
                                              x:Name="StatusFilterComboBox"
                                              Style="{StaticResource ComboBoxStyle}"
                                              SelectionChanged="StatusFilterComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                                        <ComboBoxItem Content="Открыта"/>
                                        <ComboBoxItem Content="В работе"/>
                                        <ComboBoxItem Content="Выполнена"/>
                                        <ComboBoxItem Content="Закрыта"/>
                                        <ComboBoxItem Content="Отменена"/>
                                    </ComboBox>

                                    <!-- Фильтр по дате -->
                                    <TextBlock Grid.Column="4" 
                                               Text="Месяц:"
                                               VerticalAlignment="Center"
                                               Margin="20,0,10,0"/>

                                    <ComboBox Grid.Column="5" 
                                              x:Name="MonthFilterComboBox"
                                              Style="{StaticResource ComboBoxStyle}"
                                              SelectionChanged="MonthFilterComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Все месяцы" IsSelected="True"/>
                                        <ComboBoxItem Content="Январь"/>
                                        <ComboBoxItem Content="Февраль"/>
                                        <ComboBoxItem Content="Март"/>
                                        <ComboBoxItem Content="Апрель"/>
                                        <ComboBoxItem Content="Май"/>
                                        <ComboBoxItem Content="Июнь"/>
                                        <ComboBoxItem Content="Июль"/>
                                        <ComboBoxItem Content="Август"/>
                                        <ComboBoxItem Content="Сентябрь"/>
                                        <ComboBoxItem Content="Октябрь"/>
                                        <ComboBoxItem Content="Ноябрь"/>
                                        <ComboBoxItem Content="Декабрь"/>
                                    </ComboBox>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Таблица заявок -->
                <Border Background="White" 
                        Padding="20"
                        BorderBrush="#D4C8B3" 
                        BorderThickness="1"
                        CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="📋 Список заявок"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"
                                   Foreground="#333333"/>

                        <DataGrid x:Name="RequestsGrid"
                                  Style="{StaticResource DataGridStyle}"
                                  SelectionChanged="RequestsGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <!-- ID -->
                                <DataGridTextColumn Header="ID" 
                                                    Binding="{Binding request_id}" 
                                                    Width="60"/>

                                <!-- Тип заявки -->
                                <DataGridTextColumn Header="Тип" 
                                                    Binding="{Binding request_type}" 
                                                    Width="120"/>

                                <!-- Описание -->
                                <DataGridTextColumn Header="Описание" 
                                                    Binding="{Binding description}" 
                                                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="MaxHeight" Value="60"/>
                                            <Setter Property="TextTrimming" Value="WordEllipsis"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Статус -->
                                <DataGridTemplateColumn Header="Статус" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding status}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <Trigger Property="Text" Value="Открыта">
                                                                <Setter Property="Foreground" Value="#2196F3"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </Trigger>
                                                            <Trigger Property="Text" Value="В работе">
                                                                <Setter Property="Foreground" Value="#FF9800"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </Trigger>
                                                            <Trigger Property="Text" Value="Выполнена">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </Trigger>
                                                            <Trigger Property="Text" Value="Закрыта">
                                                                <Setter Property="Foreground" Value="#795548"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </Trigger>
                                                            <Trigger Property="Text" Value="Отменена">
                                                                <Setter Property="Foreground" Value="#F44336"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Дата создания -->
                                <DataGridTextColumn Header="Создана" 
                                                    Binding="{Binding created_date, StringFormat='dd.MM.yyyy'}" 
                                                    Width="100"/>

                                <!-- Дата выполнения -->
                                <DataGridTextColumn Header="Выполнена" 
                                                    Binding="{Binding completed_date, StringFormat='dd.MM.yyyy'}" 
                                                    Width="100"/>

                                <!-- Адрес -->
                                <DataGridTextColumn Header="Адрес" 
                                                    Binding="{Binding building_address}" 
                                                    Width="200"/>

                                <!-- Квартира -->
                                <DataGridTextColumn Header="Кв." 
                                                    Binding="{Binding apartment_number}" 
                                                    Width="60"/>

                                <!-- Исполнитель -->
                                <DataGridTextColumn Header="Исполнитель" 
                                                    Binding="{Binding employee_name}" 
                                                    Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Информация о выбранной заявке -->
                        <Border Background="#F9F9F9" 
                                BorderBrush="#D4C8B3" 
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="15"
                                Margin="0,15,0,0"
                                Visibility="Collapsed"
                                x:Name="RequestDetailsPanel">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="ℹ️" 
                                           FontSize="16"
                                           Margin="0,0,10,0"/>

                                <TextBlock Grid.Column="1" 
                                           x:Name="SelectedRequestInfo"
                                           TextWrapping="Wrap"
                                           FontSize="13"
                                           Foreground="#666666"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>